@page "/programKeepWeight"
<PageTitle>Program keep weight</PageTitle>
<MudText Align="Align.Center" Typo="Typo.h1" Style="text-transform: uppercase;"><strong>Program utrzymania wagi</strong></MudText>

<MudGrid>
    <MudItem xs="6">
        <MudCard Class="pa-3" Style="width:100%;background:rgb(223,243,156);border-radius: 20px;">
            <MudCardContent>
                <!-- Sekcja opis -->
                <MudStack Spacing="5">
                    <MudText Align="Align.Left" Typo="Typo.h4"><strong>Chcesz utrzymać zdrową wagę? </strong></MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5" >@textProgramKeep1<br/>@textProgramKeep1_1 </MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5" ><strong>@textProgramKeep2</strong> @textProgramKeep2_1 </MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5" ><strong>@textProgramKeep3</strong> @textProgramKeep3_1 </MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5" ><strong>@textProgramKeep4</strong> @textProgramKeep4_1 </MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5" >@textProgramKeep5 </MudText>
                </MudStack>
                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled" Style="width: auto;background:rgb(255,152,107);border-radius: 20px;"
                           Href="/caloryCount">
                    Wylicz swoje zapotrzebowanie kaloryczne
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <!-- Sekcja grafiki -->
    <MudItem xs="6">
        <MudCard Style="width:100%; position: relative;">
            <MudImage Fluid="true" Src="/Images/Program/ProgramKeepWeight.png" Alt="Image" Class="rounded-lg"/>
        </MudCard>
    </MudItem>
</MudGrid>

