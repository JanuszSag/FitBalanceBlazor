@page "/programForUnderweight"

<PageTitle>Program gain weight</PageTitle>
<MudText Align="Align.Center" Typo="Typo.h1" Style="text-transform: uppercase;"><strong>Program zwiększenie wagi</strong></MudText>

<MudGrid>
    <MudItem xs="6">
        <MudCard Class="pa-3" Style="width:100%;background:rgb(223,243,156);border-radius: 20px;">
            <MudCardContent>
                <!-- Description Section -->
                <MudStack Spacing="5">
                    <MudText Align="Align.Left" Typo="Typo.h4"><strong>Czy marzysz o tym, aby przybrać na wadze w zdrowy i kontrolowany sposób?</strong></MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5">@textProgramGain1</MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5"><strong>@textProgramGain2</strong> @textProgramGain2_1</MudText>
                    <MudText Align="Align.Left" Typo="Typo.h5"><strong>@textProgramGain3</strong> @textProgramGain3_1</MudText>
                </MudStack>

                <!-- Call-to-Action Button -->
                <MudButton ButtonType="ButtonType.Submit"  
                           Variant="Variant.Filled" Style="width: auto;background:rgb(255,152,107);border-radius: 20px;">
                    Wylicz swoje zapotrzebowanie kaloryczne
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <!-- Image Section -->
    <MudItem xs="6">
        <MudCard Style="width:100%; position: relative;">
            <MudImage Fluid="true" Src="/Images/Program/ProgramForUnderweight.png" Alt="Image" Class="rounded-lg"/>
        </MudCard>
    </MudItem>
</MudGrid>

@code{
    string textProgramGain1 = "Nasz program pomoże Ci osiągnąć idealną wagę, jednocześnie dbając o Twoje zdrowie. Skupiamy się na zrównoważonym planie żywieniowym i treningowym, który dostosujemy do Twoich indywidualnych potrzeb. Niezależnie od tego, czy masz szybki metabolizm, czy po prostu potrzebujesz wsparcia w przybieraniu masy mięśniowej, nasi eksperci są gotowi, by pomóc Ci osiągnąć cel.";
    string textProgramGain2 = "\u2022 Indywidualny plan diety";
    string textProgramGain2_1 = "z uwzględnieniem wysokokalorycznych, ale zdrowych posiłków.";
    string textProgramGain3 = "\u2022 Regularne monitorowanie postępów";
    string textProgramGain3_1 = "i dostosowywanie planu.";
}
