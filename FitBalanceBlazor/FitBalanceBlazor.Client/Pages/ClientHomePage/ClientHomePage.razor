@page "/clientHomePage"
@using MudBlazor

<MudGrid>
    <!-- Górna część strony z obrazkiem powitalnym -->
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Class="pa-4 rounded" Style="position: relative; text-align: center;">
                <MudImage Src="/Images/ClientHomePage/ClientHomePageImage.png"
                          Alt="Welcome image"
                          Class="img-fluid rounded"
                          Style="width: 100%; height: auto;" />
                <!-- Tekst na zdjęciu -->
                <div Style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: black; font-size: 2rem; font-weight: bold;">
                    WITAJ, IMIĘ
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Sekcja z przyciskami na dole obrazka powitalnego -->
    <MudItem xs="12" Class="mt-4">
        <MudGrid>
            <MudItem xs="2">
                <MudCard Class="rounded-card" Style="border: 2px solid #DFF39C; background-color: white; color: black;">
                    <MudCardContent>
                        <h6>Twój indywidualny program dietetyczny</h6>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Style="background-color: #FF986B; color: white;" Variant="Variant.Filled" Href="/myDiet">Zobacz</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="2">
                <MudCard Class="rounded-card" Style="border: 2px solid #DFF39C; background-color: white; color: black;">
                    <MudCardContent>
                        <h6>Wszystkie diety</h6>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Style="background-color: #FF986B; color: white;" Variant="Variant.Filled" Href="/allClientDiets-Client">Zobacz</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="2">
                <MudCard Class="rounded-card" Style="border: 2px solid #DFF39C; background-color: white; color: black;">
                    <MudCardContent>
                        <h6>Twoje dane</h6>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Style="background-color: #FF986B; color: white;" Variant="Variant.Filled" Href="/informationAboutPersonalData">Zobacz</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="2">
                <MudCard Class="rounded-card" Style="border: 2px solid #DFF39C; background-color: white; color: black;">
                    <MudCardContent>
                        <h6>Wyliczanie kkal</h6>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Style="background-color: #FF986B; color: white;" Variant="Variant.Filled" Href="/caloryCount">Zobacz</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="2">
                <MudCard Class="rounded-card" Style="border: 2px solid #DFF39C; background-color: white; color: black;">
                    <MudCardContent>
                        <h6>Raport</h6>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Style="background-color: #FF986B; color: white;" Variant="Variant.Filled" Href="/raport">Zobacz</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudItem>

    <!-- Sekcja z ilością wypitej wody -->
    <MudPaper Class="pa-4 rounded" Style="border: 2px solid #00BFFF; border-radius: 20px;">
        <MudGrid>
            <!-- Lewa część z informacją o całkowitej ilości wody -->
            <MudItem xs="3">
                <MudPaper Class="pa-4" Style="background-color: #E0FFB3; border-radius: 15px; text-align: center;">
                    <h5 style="font-weight: bold;">WODA</h5>
                    <MudText Style="color: grey; font-weight: bold;">TOTAL</MudText>
                    <h1 style="font-size: 3rem;">@totalWater ml</h1>
                </MudPaper>
            </MudItem>

            <!-- Prawa część ze szklankami -->
            <MudItem xs="9">
                <MudText Style="font-weight: bold;">Wskaż, ile wody wypiłeś dzisiaj</MudText>
                <MudGrid Class="mt-4">
                    @for (int i = 0; i < totalCups; i++)
                    {
                        <MudItem xs="1">
                            <MudButton Variant="Variant.Text" Style="min-width: 0; padding: 0;" OnClick="@(() => ToggleCup(i))">
                                <MudIcon Icon="@GetCupIcon(i)" 
                                         Size="Size.Large" 
                                         Style="@($"color: {GetCupColor(i)};")" />
                            </MudButton>
                        </MudItem>
                    }
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudGrid>

@code {
    private int totalWater = 0;
    private int totalCups = 7; 
    private bool[] cupFilled; 

    protected override void OnInitialized()
    {
        cupFilled = new bool[totalCups];
    }

    private void ToggleCup(int index)
    {
        if (index >= 0 && index < cupFilled.Length)
        {
            cupFilled[index] = !cupFilled[index];
            
            totalWater = cupFilled.Count(c => c) * 250;
            
            StateHasChanged();
        }
    }

    private string GetCupIcon(int index)
    {
        if (index >= 0 && index < cupFilled.Length)
        {
            return cupFilled[index] ? Icons.Material.Filled.LocalDrink : Icons.Material.Outlined.LocalDrink;
        }
        return Icons.Material.Outlined.LocalDrink;
    }

    private string GetCupColor(int index)
    {
        if (index >= 0 && index < cupFilled.Length)
        {
            return cupFilled[index] ? "#1976D2" : "#000000"; 
        }
        return "#000000"; 
    }
}