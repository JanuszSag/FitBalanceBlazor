@page "/changeCertainMeal"
@using MudBlazor
@using MudBlazor.Components


<!-- Tytul strony -->
<MudText Align="Align.Center" Typo="Typo.h1" Style="text-transform: uppercase; font-weight: bold;">Zmiana Śniadania</MudText>

<MudGrid Class="mt-5">
    <MudItem xs="12">
        <!-- Sekcja z informacja o daniu -->
        <MudPaper Class="pa-4" Style="background-color: #E0FFB3; border-radius: 20px;">
            <MudText Typo="Typo.h6" Style="font-weight: bold;">Twoje przypisane śniadanie: nazwa śniadania</MudText>
        </MudPaper>
    </MudItem>

    <!-- Sekcja wyboru -->
    <MudItem xs="12" Class="mt-4">
        <MudPaper Class="pa-4" Style="background-color: #E0FFB3; border-radius: 20px;">
            <MudText Typo="Typo.h6" Style="font-weight: bold;">Możliwa zamiana ze względu na zapotrzebowanie kaloryczne:</MudText>

            <MudRadioGroup @bind-Value="SelectedOption" Class="mt-3">
                <MudRadio Value=@("jajecznica z 5 jajek")>Jajecznica z 5 jajek</MudRadio>
                <MudRadio Value=@("twarożek poltlusty ze szczypiorkiem i rzodkiewką")>Twarożek półtłusty ze szczypiorkiem i rzodkiewką</MudRadio>
                <MudRadio Value=@("sałatka grecka i kanapka z pastą jajeczną")>Sałatka grecka i kanapka z pastą jajeczną</MudRadio>
                <MudRadio Value=@("bajgiel z warzywami i twarogiem")>Bajgiel z warzywami i twarogiem</MudRadio>
                <MudRadio Value=@("3 kanapki z pastą warzywną")>3 kanapki z pastą warzywną</MudRadio>
            </MudRadioGroup>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="background-color: #FF986B; border-radius: 20px; margin-top: 20px;">
                Zatwierdź
            </MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    public string SelectedOption { get; set; } 
}